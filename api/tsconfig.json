{
  "compilerOptions": {
    "target": "es5", // or es6/esnext depending on your needs
    "module": "commonjs", // Vercel functions require commonjs
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true, // If you're working with JSON imports
    "moduleResolution": "node",
    "baseUrl": ".", // Start module resolution from root
    "paths": {
      "@/*": ["./*"] // Alias for root imports, adjust according to your structure
    },
    "outDir": "dist" // Where compiled files will be output
  },
  "include": ["api/**/*.ts"], // Include all TypeScript files in the `api` folder
  "exclude": ["node_modules", "dist"] // Exclude unnecessary directories
}
